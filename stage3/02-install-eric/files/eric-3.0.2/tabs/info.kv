#:import formatter formatter
#:import InfoRow uix.inforow.InfoRow

<Info>:
        text: 'INFO'
        date: date
        time: time
        special_offer: special_offer
        shift_start: shift_start
        shift_end: shift_end
        alarm: alarm
        lodging: lodging
        surcharge: surcharge
        bar: bar
        bonus: bonus
        discount: discount
        paid: paid
        total: total
        TabContentLayout:
                BoxLayout:
                        orientation: 'vertical'
                        Label:
                                id: date
                                font_size: dimens.font_size_l
                                text_size: self.size
                                halign: 'center'
                                valign: 'bottom'
                        Label:
                                id: time
                                bold: True
                                font_size: dimens.font_size_xl
                        BorderedBoxLayout:
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                                InfoRow:
                                        id: special_offer
                                        label: 'Promoci√≥n'
                                        value: root.DEFAULT_TEXT
                                InfoRow:
                                        id: shift_start
                                        label: 'Ingreso'
                                        value: root.DEFAULT_TIME
                                InfoRow:
                                        id: shift_end
                                        label: 'Fin de turno'
                                        value: root.DEFAULT_TIME
                                InfoRow:
                                        id: alarm
                                        label: 'Despertador'
                                        value: root.DEFAULT_TIME 
                AnchorLayout:
                        anchor_y: 'bottom'
                        BoxLayout:
                                orientation: 'vertical'
                                BorderedBoxLayout:
                                        size_hint_y: None
                                        height: self.minimum_height
                                        orientation: 'vertical'
                                        InfoRow:
                                                id: lodging
                                                label: 'Alojamiento'
                                                value: formatter.as_money(0)
                                        InfoRow:
                                                id: surcharge
                                                label: 'Recargos/Percnocte'
                                                value: formatter.as_money(0)
                                        InfoRow:
                                                id: bar
                                                label: 'Bar'
                                                value: formatter.as_money(0)
                                        InfoRow:
                                                id: bonus
                                                label: 'Bonificaciones'
                                                value: formatter.as_money(0)
                                        InfoRow:
                                                id: discount
                                                label: 'Descuento'
                                                value: formatter.as_money(0)
                                        InfoRow:
                                                id: paid
                                                label: 'Pagado a cuenta'
                                                value: formatter.as_money(0)
                                        InfoRow:
                                                id: total
                                                label: 'Total'
                                                value: formatter.as_money(0)
                                                bold: True
