#:import AsyncRecicleView uix.asyncrecycleview
#:import ProductView uix.productview
#:import Widow kivy.core.window

<Bar>:
        categories_rv: categories_rv
        products_rv: products_rv
        text: 'BAR'
        TabContentLayout:
                BoxLayout:
                        size_hint_x: .5
                        SelectableRecycleView:
                                id: categories_rv
                BoxLayout:
                        AsyncRecycleView:
                                id: products_rv
                                viewclass: 'ProductView'
                                RecycleBoxLayout:
                                        orientation: 'vertical'
                                        size_hint_y: None
                                        height: self.minimum_height
                                        default_size: None, Window.height * .1
                                        default_size_hint: 1, None
                                        spacing: self.default_size[1] * .025
