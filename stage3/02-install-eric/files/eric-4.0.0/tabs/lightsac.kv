#:import ACPower uix.acpower
#:import dimens uix.dimens.dimens
#:import ColoredButton uix.coloredbutton
#:import ColoredToggleButton uix.coloredtogglebutton
#:import dimens uix.dimens.dimens
#:import LightControl uix.lightcontrol

<LightsAC>:
        text: self.LIGHTS_TITLE + self.AC_TITLE
        content_layout: content_layout
        lights_layout: lights_layout
        lights_box_layout: lights_box_layout
        lights_stack_layout: lights_stack_layout
        ac_layout: ac_layout
        ac_power: ac_power
        temp_layout: temp_layout
        ac_temp: ac_temp
        ac_status: ac_status
        mode_layout: mode_layout
        ac_mode: ac_mode
        TabContentLayout:
                id: content_layout
                ScrollView:
                        size_hint_x: 2
                        AnchorLayout:
                                size_hint_y: None
                                height: max(self.parent.height, root.lights_layout.height)
                                BoxLayout:
                                        id: lights_layout
                                        orientation: 'vertical'
                                        size_hint_y: None
                                        height: self.minimum_height
                                        BoxLayout:
                                                id: lights_box_layout
                                                orientation: 'vertical'
                                                size_hint_y: None
                                                height: self.minimum_height
                                        StackLayout:
                                                id: lights_stack_layout
                                                size_hint_y: None
                                                height: self.minimum_height
                AnchorLayout:
                        id: ac_layout
                        BorderedBoxLayout:
                                orientation: 'vertical'
                                size_hint_y: .75
                                Label:
                                        text: 'Aire'
                                        font_size: dimens.font_size_l
                                AnchorLayout:
                                        size_hint_y: None
                                        height: root.ac_power.height
                                        ACPower:
                                                id: ac_power
                                                on_release: root.ac_toggle_power()
                                                size_preset: 'L'
                                                disabled: True
                                BoxLayout:
                                        id: temp_layout
                                        AnchorLayout:
                                                ColoredButton:
                                                        background: 'images/minus.png'
                                                        size_preset: 'M'
                                                        on_release: root.ac_temp_down()
                                        AnchorLayout:
                                                ShortenedLabel:
                                                        id: ac_temp
                                                        font_size: dimens.font_size_m
                                        AnchorLayout:
                                                ColoredButton:
                                                        background: 'images/plus.png'
                                                        on_release: root.ac_temp_up()
                                                        size_preset: 'M'
                                BoxLayout:
                                        Label:
                                                text: 'Estado:'
                                                font_size: dimens.font_size_m
                                        ShortenedLabel:
                                                id: ac_status
                                                font_size: dimens.font_size_m
                                BoxLayout:
                                        id: mode_layout
                                        Label:
                                                text: 'Modo:'
                                                font_size: dimens.font_size_m
                                        ShortenedLabel:
                                                id: ac_mode
                                                font_size: dimens.font_size_m
