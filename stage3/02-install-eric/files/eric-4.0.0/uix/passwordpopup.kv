#:import __version__ version.__version__
#:import BorderedButton uix.borderedbutton

<PasswordPopup>:
        password_input: password_input
        title: 'Eric - ' + __version__
        size_hint: .5, .3
        BoxLayout:
                spacing: self.height * .1
                padding: 0, self.spacing, 0, 0
                orientation: 'vertical'
                TextInput:
                        id: password_input
                        multiline: False
                        password: True
                BoxLayout:
                        spacing: self.width * .01
                        BorderedButton:
                                text: 'Aceptar'
                                on_release: root.check_password()
                        BorderedButton:
                                text: 'Cancelar'
                                on_release: root.dismiss()
